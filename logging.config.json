{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "default": {
      "format": "%(asctime)s | %(levelname).1s | %(name)s | %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "default"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "default",
      "filename": "service.log",
      "maxBytes": 5242880,
      "backupCount": 3,
      "encoding": "utf-8"
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "file"]
  }
}
